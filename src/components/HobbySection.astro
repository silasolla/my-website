---
import type { HobbyItem } from '../data/about';

interface Props {
  items: HobbyItem[];
}

const { items } = Astro.props;
---

<div class="hobby-container">
  {
    items.map((item) =>
      item.note ? (
        <details class="hobby-tag">
          <summary class="hobby-name">{item.name}</summary>
          <p class="hobby-note">{item.note}</p>
        </details>
      ) : (
        <span class="hobby-tag simple">{item.name}</span>
      )
    )
  }
</div>

<style>
  .hobby-container {
    display: flex;
    flex-wrap: wrap;
    gap: 0.75rem;
    align-items: flex-start;
  }

  .hobby-tag {
    background: var(--color-bg-alt);
    border: 1.5px solid var(--color-border);
    border-radius: 20px;
    padding: 0.6rem 1.2rem;
    transition: all 0.2s ease;
  }

  .hobby-tag.simple {
    display: inline-block;
    background: var(--color-bg-alt);
    border: 1.5px solid var(--color-border);
    border-radius: 20px;
    padding: 0.6rem 1.2rem;
    color: var(--color-text);
    font-size: 0.95rem;
    font-weight: 500;
  }

  .hobby-tag:not(.simple) {
    cursor: pointer;
  }

  .hobby-tag:not(.simple):hover {
    border-color: var(--color-primary);
    background: var(--color-primary-light);
  }

  .hobby-name {
    color: var(--color-text);
    font-size: 0.95rem;
    font-weight: 500;
    list-style: none;
    user-select: none;
  }

  .hobby-name::-webkit-details-marker {
    display: none;
  }

  .hobby-tag:not([open]) .hobby-name::after {
    content: ' •••';
    color: var(--color-text-light);
    font-size: 0.8rem;
    margin-left: 0.25rem;
  }

  .hobby-note {
    margin: 0.75rem 0 0 0;
    padding-top: 0.75rem;
    border-top: 1px solid var(--color-border);
    color: var(--color-text);
    font-size: 0.9rem;
    line-height: 1.6;
  }

  @media (max-width: 640px) {
    .hobby-container {
      gap: 0.6rem;
    }

    .hobby-tag,
    .hobby-tag.simple {
      padding: 0.5rem 1rem;
      font-size: 0.9rem;
    }
  }
</style>
