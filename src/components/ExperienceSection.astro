---
import type { ExperienceItem } from '../data/about';

interface Props {
  items: ExperienceItem[];
}

const { items } = Astro.props;
---

<div class="experience-list">
  {
    items.map((item) => (
      <div class="experience-item">
        <div class="period">{item.period}</div>
        <div class="details">
          <h4 class="company">{item.company}</h4>
          <p class="role">{item.role}</p>
          {item.description && <p class="description">{item.description}</p>}
        </div>
      </div>
    ))
  }
</div>

<style>
  .experience-list {
    display: flex;
    flex-direction: column;
    gap: 3rem;
  }

  .experience-item {
    display: grid;
    grid-template-columns: 220px 1fr;
    gap: 2.5rem;
    padding-bottom: 3rem;
    border-bottom: 1px solid var(--color-border);
  }

  .experience-item:last-child {
    border-bottom: none;
    padding-bottom: 0;
  }

  .period {
    color: var(--color-text-light);
    font-size: 1.05rem;
    font-weight: 500;
  }

  .details {
    display: flex;
    flex-direction: column;
    gap: 0.75rem;
  }

  .company {
    color: var(--color-primary-dark);
    font-size: 1.4rem;
    margin: 0;
    font-weight: 600;
  }

  .role {
    color: var(--color-text);
    font-weight: 500;
    font-size: 1.05rem;
    margin: 0;
  }

  .description {
    color: var(--color-text-light);
    font-size: 1rem;
    line-height: 1.7;
    margin: 0;
  }

  @media (max-width: 768px) {
    .experience-item {
      grid-template-columns: 1fr;
      gap: 0.75rem;
    }

    .period {
      font-size: 0.9rem;
    }

    .company {
      font-size: 1.1rem;
    }
  }
</style>
