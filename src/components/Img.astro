---
/**
 * 画像コンポーネント - @@/ 記法とキャプションをサポート
 *
 * Usage:
 *   import Img from '@/components/Img.astro';
 *   <Img src="@@/2025-10-26-03_test/image.webp" alt="説明" caption="図1: 実行結果" width="400" />
 */

interface Props {
  src: string;
  alt: string;
  caption?: string;
  width?: string | number;
  height?: string | number;
  class?: string;
}

const { src, alt, caption, width, height, class: className } = Astro.props;

// @@/ を解決
function resolveImageUrl(path: string): string {
  const IMAGE_BASE_URL = import.meta.env.IMAGE_BASE_URL || '';
  const cleanPath = path.replace(/^@@\//, '').replace(/^\/+/, '');

  if (IMAGE_BASE_URL) {
    return `${IMAGE_BASE_URL}/posts/${cleanPath}`;
  } else {
    return `/posts/images/${cleanPath}`;
  }
}

const resolvedSrc = src.startsWith('@@/') ? resolveImageUrl(src) : src;
---

{
  caption ? (
    <figure class={className}>
      <img src={resolvedSrc} alt={alt} width={width} height={height} />
      <figcaption>{caption}</figcaption>
    </figure>
  ) : (
    <img src={resolvedSrc} alt={alt} width={width} height={height} class={className} />
  )
}

<style>
  figure {
    margin: 1.5rem auto;
    text-align: center;
  }

  figcaption {
    margin-top: 0.75rem;
    font-size: 0.9rem;
    color: var(--color-text-light);
    font-style: italic;
  }
</style>
