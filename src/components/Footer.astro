---
import { profileData } from '../data/profile';

const currentYear = new Date().getFullYear();
---

<footer class="footer">
  <p class="copyright">&copy; {currentYear}, {profileData.nameEn} ({profileData.username})</p>
</footer>

<style>
  .footer {
    margin-top: 4rem;
    padding: 2rem 0;
    border-top: 1px solid var(--color-border);
    text-align: center;
  }

  .copyright {
    color: var(--color-text-light);
    font-size: 0.9rem;
    margin: 0;
  }
</style>
