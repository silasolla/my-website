---
import type { EducationItem } from '../data/about';

interface Props {
  items: EducationItem[];
}

const { items } = Astro.props;
---

<div class="education-list">
  {
    items.map((item) => (
      <div class="education-item">
        <div class="period">{item.period}</div>
        <div class="details">
          <h4 class="institution">{item.institution}</h4>
          {item.degree && <p class="degree">{item.degree}</p>}
          {item.description && <p class="description">{item.description}</p>}
        </div>
      </div>
    ))
  }
</div>

<style>
  .education-list {
    display: flex;
    flex-direction: column;
    gap: 2.5rem;
  }

  .education-item {
    display: grid;
    grid-template-columns: 220px 1fr;
    gap: 2.5rem;
    padding-bottom: 2.5rem;
    border-bottom: 1px solid var(--color-border);
  }

  .education-item:last-child {
    border-bottom: none;
    padding-bottom: 0;
  }

  .period {
    color: var(--color-text-light);
    font-size: 1.05rem;
    font-weight: 500;
  }

  .details {
    display: flex;
    flex-direction: column;
    gap: 0.75rem;
  }

  .institution {
    color: var(--color-primary-dark);
    font-size: 1.4rem;
    margin: 0;
    font-weight: 600;
  }

  .degree {
    color: var(--color-text);
    font-size: 1.05rem;
    margin: 0;
  }

  .description {
    color: var(--color-text);
    font-size: 1rem;
    line-height: 1.6;
    margin: 0;
  }

  @media (max-width: 768px) {
    .education-item {
      grid-template-columns: 1fr;
      gap: 0.75rem;
    }

    .period {
      font-size: 0.9rem;
    }

    .institution {
      font-size: 1.1rem;
    }
  }
</style>
