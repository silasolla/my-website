{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "Standard ML",
  "scopeName": "source.sml",
  "displayName": "Standard ML",
  "aliases": ["sml", "standard-ml", "standardml"],
  "patterns": [
    { "include": "#comments" },
    { "include": "#keywords" },
    { "include": "#strings" },
    { "include": "#numbers" },
    { "include": "#operators" },
    { "include": "#types" }
  ],
  "repository": {
    "comments": {
      "patterns": [
        {
          "name": "comment.block.sml",
          "begin": "\\(\\*",
          "end": "\\*\\)",
          "patterns": [{ "include": "#comments" }]
        }
      ]
    },
    "keywords": {
      "patterns": [
        {
          "name": "keyword.control.sml",
          "match": "\\b(if|then|else|case|of|fn|fun|val|let|in|end|local|open|infix|infixr|nonfix|op|raise|handle|andalso|orelse)\\b"
        },
        {
          "name": "keyword.other.sml",
          "match": "\\b(datatype|type|structure|signature|struct|sig|functor|where|sharing|withtype|eqtype|abstype|exception|rec|and|as|do|while)\\b"
        }
      ]
    },
    "strings": {
      "patterns": [
        {
          "name": "string.quoted.double.sml",
          "begin": "\"",
          "end": "\"",
          "patterns": [
            {
              "name": "constant.character.escape.sml",
              "match": "\\\\."
            }
          ]
        },
        {
          "name": "string.quoted.other.sml",
          "match": "#\".\""
        }
      ]
    },
    "numbers": {
      "patterns": [
        {
          "name": "constant.numeric.sml",
          "match": "\\b([0-9]+|0x[0-9A-Fa-f]+|0w[0-9]+)\\b"
        },
        {
          "name": "constant.numeric.float.sml",
          "match": "\\b[0-9]+\\.[0-9]+([eE][+-]?[0-9]+)?\\b"
        }
      ]
    },
    "operators": {
      "patterns": [
        {
          "name": "keyword.operator.sml",
          "match": "(=>|->|\\||:>|:|=|\\*|\\+|-|/|<|>|@|::|\\.)"
        }
      ]
    },
    "types": {
      "patterns": [
        {
          "name": "storage.type.sml",
          "match": "\\b(int|real|string|char|bool|unit|list|option|ref|array|vector|exn)\\b"
        },
        {
          "name": "storage.type.sml",
          "match": "'[a-zA-Z][a-zA-Z0-9_]*"
        }
      ]
    }
  }
}
