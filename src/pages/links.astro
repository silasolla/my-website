  name: string;
  url: string;
  description?: string;
}

const generalLinks: LinkItem[] = [
  {
    name: 'Keybase',
    url: 'https://keybase.io/silasolla',
    description: 'PGP 公開鍵を置いています',
  },
  {
    name: 'Keyoxide',
    url: 'https://keyoxide.org/be521fe39c353503b8a241a6f520a0c7fbde155f',
    description: 'PGP 公開鍵を置いています (2)',
  },
];

const codeDevLinks: LinkItem[] = [
  {
    name: 'GitHub',
    url: 'https://github.com/silasolla',
    description: 'パソコンカタカタ',
  },
  {
    name: 'Gist',
