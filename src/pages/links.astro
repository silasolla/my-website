    url: 'https://zenn.dev/silasolla',
    description: '現状はコメントと閲覧用',
  },
  {
    name: 'DEV Community',
    url: 'https://dev.to/silasolla',
    description: '現状はコメントと閲覧用 (2)',
  },
];

const workCertificationLinks: LinkItem[] = [
  {
    name: 'Wantedly',
    url: 'https://www.wantedly.com/id/silasolla',
    description: 'おしごと',
  },
  {
    name: 'Credly',
    url: 'https://www.credly.com/users/silasolla',
    description: '資格 (Google Cloud ばっか)',
  },
];

const socialMediaLinks: LinkItem[] = [
  {
    name: 'Bluesky',
    url: 'https://bsky.app/profile/silasol.la',
    description: '自宅',
  },
  {
    name: 'Twitter (X)',
    url: 'https://twitter.com/silasolla',
    description: 'インターネット闘技場',
  },
  {
    name: 'mixi2',
    url: 'https://mixi.social/@silasolla',
    description: 'たまに浮上する',
  },
  {
    name: 'Misskey.io',
    url: 'https://misskey.io/@silasolla',
    description: '最近見てない',
  },
  {
